<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo_2048">

    <!-- Botón de salir -->
    <Button
        android:id="@+id/btnSalir"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_margin="16dp"
        android:text="←"
        android:textSize="24sp"
        android:background="#795548"
        android:textColor="#FFFFFF" />

    <!-- Contador de movimientos -->
    <TextView
        android:id="@+id/tvMovimientos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Movimientos: 0"
        android:textSize="20sp"
        android:textColor="#FFFFFF"
        android:textStyle="bold" />

    <!-- Contenedor del tablero - Ahora con scroll para tamaños grandes -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvMovimientos"
        android:layout_above="@+id/controlesContainer"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/contenedorTablero"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#BBADA0"
                android:padding="8dp"
                android:layout_gravity="center" />

        </LinearLayout>

    </ScrollView>

    <!-- Contenedor de controles reorganizado -->
    <LinearLayout
        android:id="@+id/controlesContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:orientation="vertical"
        android:gravity="center">

        <!-- Fila superior: Botón ARRIBA -->
        <Button
            android:id="@+id/btnArriba"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:text="↑"
            android:textSize="28sp"
            android:background="#FFEB3B"
            android:textColor="#000000"
            android:layout_margin="5dp" />

        <!-- Fila media: Izquierda, Abajo, Derecha -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/btnIzquierda"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:text="←"
                android:textSize="28sp"
                android:background="#FF9800"
                android:textColor="#000000"
                android:layout_margin="5dp" />

            <Button
                android:id="@+id/btnAbajo"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:text="↓"
                android:textSize="28sp"
                android:background="#FF5722"
                android:textColor="#FFFFFF"
                android:layout_margin="5dp" />

            <Button
                android:id="@+id/btnDerecha"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:text="→"
                android:textSize="28sp"
                android:background="#E91E63"
                android:textColor="#FFFFFF"
                android:layout_margin="5dp" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>