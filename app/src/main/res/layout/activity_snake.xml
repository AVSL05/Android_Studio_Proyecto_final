<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Juegos.Snake">

    <!-- Contenedor con la misma proporción que tu PNG (571x974) -->
    <FrameLayout
        android:id="@+id/gbContainer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintDimensionRatio="571:974">

        <!-- Fondo: carátula Game Boy -->
        <ImageView
            android:id="@+id/gbFrame"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:src="@drawable/gameboysnake" />

        <!-- Capa superior para posicionar por porcentajes -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- VENTANA DE JUEGO (Guidelines con width/height) -->
            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/gLeft"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.212" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/gRight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.785" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/gTop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.102" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/gBottom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.400" />

            <!-- TABLERO dentro de la “pantalla” -->
            <RelativeLayout
                android:id="@+id/board"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@color/black"
                android:gravity="center"
                app:layout_constraintStart_toStartOf="@id/gLeft"
                app:layout_constraintEnd_toEndOf="@id/gRight"
                app:layout_constraintTop_toTopOf="@id/gTop"
                app:layout_constraintBottom_toBottomOf="@id/gBottom" />

            <!-- OVERLAY de mensajes dentro de la pantalla -->
            <RelativeLayout
                android:id="@+id/overlay"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintStart_toStartOf="@id/gLeft"
                app:layout_constraintEnd_toEndOf="@id/gRight"
                app:layout_constraintTop_toTopOf="@id/gTop"
                app:layout_constraintBottom_toBottomOf="@id/gBottom">

                <Button
                    android:id="@+id/score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="Game Over! Vuelve a Intentarlo"
                    android:textSize="18sp"
                    android:background="@color/black"
                    android:textColor="@color/white"
                    android:visibility="gone"/>

                <Button
                    android:id="@+id/new_game"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/score"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="12dp"
                    android:text="Nuevo Juego"
                    android:background="@color/purple_700"
                    android:textColor="@color/white"
                    android:visibility="gone"/>

                <Button
                    android:id="@+id/resume"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/new_game"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="8dp"
                    android:text="Resume Game"
                    android:background="@color/purple_700"
                    android:textColor="@color/white"
                    android:visibility="gone"/>

                <Button
                    android:id="@+id/playagain"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/resume"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="12dp"
                    android:text="Game Over! Inténtalo de Nuevo"
                    android:textStyle="bold"
                    android:background="@color/red"
                    android:textColor="@color/white"
                    android:visibility="gone"/>
            </RelativeLayout>

            <!-- PUNTUACIÓN (debajo del bisel) -->
            <Button
                android:id="@+id/score2"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:text="puntuacion"
                android:textStyle="bold"
                android:textSize="16sp"
                android:background="@color/green"
                android:textColor="@color/black"
                app:layout_constraintTop_toBottomOf="@id/gBottom"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintVertical_bias="0.07" />

            <!-- SALIR -->
            <Button
                android:id="@+id/btnExitSnake"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Salir del Juego"
                android:textSize="14sp"
                android:background="@color/red"
                android:textColor="@color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintVertical_bias="0.93" />

            <!-- ZONAS TÁCTILES INVISIBLES (D-Pad / A / B / START) -->
            <View
                android:id="@+id/up"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@android:color/transparent"
                android:clickable="true"
                android:focusable="true"
                android:contentDescription="Arriba"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="0.168"
                app:layout_constraintVertical_bias="0.591" />

            <View
                android:id="@+id/down"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@android:color/transparent"
                android:clickable="true"
                android:focusable="true"
                android:contentDescription="Abajo"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="0.168"
                app:layout_constraintVertical_bias="0.735" />

            <View
                android:id="@+id/left"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@android:color/transparent"
                android:clickable="true"
                android:focusable="true"
                android:contentDescription="Izquierda"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="0.046"
                app:layout_constraintVertical_bias="0.663" />

            <View
                android:id="@+id/right"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@android:color/transparent"
                android:clickable="true"
                android:focusable="true"
                android:contentDescription="Derecha"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="0.291"
                app:layout_constraintVertical_bias="0.663" />

            <View
                android:id="@+id/btnA"
                android:layout_width="88dp"
                android:layout_height="88dp"
                android:background="@android:color/transparent"
                android:clickable="true"
                android:focusable="true"
                android:contentDescription="Botón A"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="0.846"
                app:layout_constraintVertical_bias="0.658" />

            <View
                android:id="@+id/btnB"
                android:layout_width="88dp"
                android:layout_height="88dp"
                android:background="@android:color/transparent"
                android:clickable="true"
                android:focusable="true"
                android:contentDescription="Botón B"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="0.676"
                app:layout_constraintVertical_bias="0.693" />

            <View
                android:id="@+id/pause"
                android:layout_width="110dp"
                android:layout_height="40dp"
                android:background="@android:color/transparent"
                android:clickable="true"
                android:focusable="true"
                android:contentDescription="Start / Pausa"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="0.55"
                app:layout_constraintVertical_bias="0.90" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
