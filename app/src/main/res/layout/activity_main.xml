<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    tools:context=".MainActivity">

    <!-- Texto de bienvenida -->
    <TextView
        android:id="@+id/tvWelcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bienvenido a la App"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/tvDescription"
        android:layout_marginTop="100dp" />

    <!-- Descripción -->
    <TextView
        android:id="@+id/tvDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Aquí se mostrarán los juegos disponibles"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvWelcome" />

    <!-- Botón de cerrar sesión -->
    <Button
        android:id="@+id/btnLogout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cerrar Sesión"
        android:layout_marginBottom="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- PlayerView de ExoPlayer para mostrar el video, con ancho fijo y altura automática según la relación de aspecto -->
    <com.google.android.exoplayer2.ui.PlayerView
        android:id="@+id/videoButton"
        android:layout_width="150dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/tvDescription"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="0.2"
        app:layout_constraintDimensionRatio="16:9"
        android:layout_marginTop="20dp"
        app:use_controller="false" />

    <!-- Botón para iniciar el juego, inicialmente invisible -->
    <Button
        android:id="@+id/btnPlaySnake"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jugar Snake"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@+id/videoButton"
        app:layout_constraintStart_toStartOf="@+id/videoButton"
        app:layout_constraintEnd_toEndOf="@+id/videoButton"
        android:layout_marginTop="8dp" />

    <!-- Segundo PlayerView para memorama -->
    <com.google.android.exoplayer2.ui.PlayerView
        android:id="@+id/videoButtonMemorama"
        android:layout_width="150dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/btnPlaySnake"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="0.2"
        app:layout_constraintDimensionRatio="16:9"
        android:layout_marginTop="20dp"
        app:use_controller="false" />

    <!-- Botón para iniciar Memorama, inicialmente invisible -->
    <Button
        android:id="@+id/btnPlayMemorama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jugar Memorama"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@+id/videoButtonMemorama"
        app:layout_constraintStart_toStartOf="@+id/videoButtonMemorama"
        app:layout_constraintEnd_toEndOf="@+id/videoButtonMemorama"
        android:layout_marginTop="8dp" />

    <!-- Tercer PlayerView para Sudoku -->
    <!-- ImageView para mostrar GIF de Sudoku -->
    <ImageView
        android:id="@+id/imageSudoku"
        android:layout_width="150dp"
        android:layout_height="0dp"
        android:visibility="visible"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:background="@android:color/darker_gray"
        app:layout_constraintTop_toBottomOf="@+id/btnPlayMemorama"
        app:layout_constraintHorizontal_bias="0.2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintDimensionRatio="16:9"
        android:layout_marginTop="20dp"
        android:contentDescription="GIF Sudoku" />

    <!-- Botón para iniciar Sudoku, inicialmente invisible -->
    <Button
        android:id="@+id/btnPlaySudoku"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jugar Sudoku"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@+id/imageSudoku"
        app:layout_constraintStart_toStartOf="@+id/imageSudoku"
        app:layout_constraintEnd_toEndOf="@+id/imageSudoku"
        android:layout_marginTop="8dp" />

    <!-- Cuarto PlayerView para BuscaMinas -->
    <com.google.android.exoplayer2.ui.PlayerView
        android:id="@+id/videoButtonBuscaMinas"
        android:layout_width="150dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/btnPlaySudoku"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="0.2"
        app:layout_constraintDimensionRatio="16:9"
        android:layout_marginTop="20dp"
        app:use_controller="false" />

    <!-- Botón para iniciar BuscaMinas, inicialmente invisible -->
    <Button
        android:id="@+id/btnPlayBuscaMinas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jugar BuscaMinas"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@+id/videoButtonBuscaMinas"
        app:layout_constraintStart_toStartOf="@+id/videoButtonBuscaMinas"
        app:layout_constraintEnd_toEndOf="@+id/videoButtonBuscaMinas"
        android:layout_marginTop="8dp" />

</androidx.constraintlayout.widget.ConstraintLayout>