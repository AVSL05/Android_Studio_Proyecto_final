<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center">

    <!-- Título de Registro -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/registro"
        android:textSize="32sp"
        android:textStyle="bold"
        android:textColor="?android:textColorPrimary"
        android:layout_marginBottom="48dp" />

    <!-- Apartado de nombre completo -->
    <com.google.android.material.textfield.TextInputLayout
        style="@style/CustomTextInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp">

        <!-- EditText para nombre completo -->
        <EditText
            android:id="@+id/etName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/nombre_completo"
            android:inputType="textPersonName"
            android:padding="16dp"
            android:maxLength="35"
            android:autofillHints="name" />

    </com.google.android.material.textfield.TextInputLayout>
    <!-- Fin de apartado de nombre completo -->

    <!-- Apartado de correo electrónico -->
    <com.google.android.material.textfield.TextInputLayout
        style="@style/CustomTextInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp">

        <!-- EditText para correo electrónico -->
        <EditText
            android:id="@+id/etEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/correo_electronico"
            android:inputType="textEmailAddress"
            android:padding="16dp"
            android:maxLength="35"
            android:autofillHints="emailAddress" />

    </com.google.android.material.textfield.TextInputLayout>
    <!-- Fin de apartado de correo electrónico -->

    <!-- Apartado de contraseña -->
    <com.google.android.material.textfield.TextInputLayout
        style="@style/CustomTextInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:endIconMode="password_toggle">

        <!-- EditText para contraseña -->
        <EditText
            android:id="@+id/etPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/contrasena"
            android:inputType="textPassword"
            android:padding="16dp"
            android:maxLength="35"
            android:autofillHints="password" />

    </com.google.android.material.textfield.TextInputLayout>
    <!-- Fin de apartado de contraseña -->

    <!-- Apartado de confirmar contraseña -->
    <com.google.android.material.textfield.TextInputLayout
        style="@style/CustomTextInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        app:endIconMode="password_toggle">

        <!-- EditText para confirmar contraseña -->
        <EditText
            android:id="@+id/etConfirmPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/confirmar_contrasena"
            android:inputType="textPassword"
            android:padding="16dp"
            android:maxLength="35"
            android:autofillHints="password" />

    </com.google.android.material.textfield.TextInputLayout>
    <!-- Fin de apartado de confirmar contraseña -->

    <!-- Botón de registrarse -->
    <Button
        android:id="@+id/btnRegister"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/registrarse"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp"
        android:padding="16dp" />

    <!-- Texto para redirigir a iniciar sesión -->
    <TextView
        android:id="@+id/tvLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ya_tienes_cuenta_inicia_sesion"
        android:textColor="?android:textColorPrimary"
        android:textSize="14sp"
        android:padding="8dp" />

</LinearLayout>
